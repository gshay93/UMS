<Window x:Class="UMS.start"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UMS"
        mc:Ignorable="d"
        Title="start" Height="400" Width="700" Icon="images/icon.png" BorderBrush="Transparent" WindowStyle="None" AllowsTransparency="True" WindowStartupLocation="CenterScreen">
    <Window.Background>
        <ImageBrush ImageSource="images/start.png"/>
    </Window.Background>
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="images/start.png"/>
        </Grid.Background>
        <Button x:Name="btn_close" BorderBrush="Transparent" HorizontalAlignment="Left" Margin="660,0,0,0" VerticalAlignment="Top" Width="30" Height="30" RenderTransformOrigin="0.5,0.5" Click="close_Click" Cursor="Arrow">
            <Button.Background>
                <ImageBrush ImageSource="images/close.png"/>
            </Button.Background>
            
        </Button>
    </Grid>
</Window>
